<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include
        layout="@layout/view_camera_and_title"/>

    <TextView
        android:text="@string/memo_details_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:listSeparatorTextViewStyle"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/memo_date"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>

    <CheckBox
        android:text="@string/memo_solved_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/memo_solved"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>

    <Button
        android:text="@string/memo_contacts_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/memo_contacts"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>

    <Button
        android:text="@string/memo_report_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/memo_report"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>

</LinearLayout>